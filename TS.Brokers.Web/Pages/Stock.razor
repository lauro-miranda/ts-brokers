@page "/stock"
@using TS.Brokers.Web.Data

<PageTitle>Ações</PageTitle>

<table class="table">
    <thead>
        <tr>
            <th>Símbolo</th>
            <th>Quantidade</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Stocks.Values.OrderBy(x => x.Price))
        {
            <tr>
                <td>@stock.Symbol</td>
                <td>@stock.Quantity</td>
                <td>@stock.Price</td>
            </tr>
        }
    </tbody>
</table>